{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hymn",
  "scopeName": "source.hymn",
  "patterns": [
    {
      "match": "#.*$",
      "name": "comment.line.double-slash.hymn"
    },
    {
      "begin": "'",
      "end": "'",
      "name": "string.quoted.hymn",
      "captures": {
        "0": {
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.hymn"
            }
          ]
        }
      }
    },
    {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.hymn",
      "captures": {
        "0": {
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.hymn"
            }
          ]
        }
      }
    },
    {
      "match": "\\b(const|var|let)\\b",
      "captures": {
        "1": {
          "name": "storage.modifier.hymn"
        }
      }
    },
    {
      "match": "^(import) +(?:\\w:?)*",
      "captures": {
        "1": {
          "name": "keyword.import.hymn"
        }
      }
    },
    {
      "match": "\\b(true|false|nil)\\b",
      "captures": {
        "1": {
          "name": "constant.language.hymn"
        }
      }
    },
    {
      "match": "\\b(if|elif|else|for|while|return|break|continue|and|or|not|match|is|pass|goto|label|iterate|in|async|await|yield|implements|try|except|then|end)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.hymn"
        }
      }
    },
    {
      "match": "\\b(new)\\b",
      "captures": {
        "1": {
          "name": "keyword.operator.new.hymn"
        }
      }
    },
    {
      "match": "^(function) +(\\w+(?:\\.\\w+)?)",
      "captures": {
        "1": {
          "name": "keyword.struct.hymn"
        },
        "2": {
          "name": "entity.name.type.hymn"
        }
      }
    },
    {
      "match": "\\b(function)\\b",
      "captures": {
        "1": {
          "name": "keyword.struct.hymn"
        }
      }
    },
    {
      "match": "^(\\w+) (\\w+) *($|\\(| )",
      "captures": {
        "1": {
          "name": "entity.name.function.hymn"
        },
        "2": {
          "name": "entity.name.function.hymn"
        }
      }
    },
    {
      "match": "^(\\w+) *($|\\(| )",
      "captures": {
        "1": {
          "name": "entity.name.function.hymn"
        }
      }
    },
    {
      "match": "(\\w+)(?=<.*>\\()",
      "captures": {
        "1": {
          "name": "support.function.hymn"
        }
      }
    },
    {
      "match": "(?<=^| |\\+|\\(|\\.)(\\w+) *(?=\\()",
      "captures": {
        "1": {
          "name": "support.function.hymn"
        }
      }
    },
    {
      "match": "\\b([0-9]+(?:\\.[0-9]+)?)\\b",
      "captures": {
        "1": {
          "name": "constant.numeric.decimal.hymn"
        }
      }
    },
    {
      "match": "(?<= )(>=|<=|!=|<|>|==)(?= +)",
      "captures": {
        "1": {
          "name": "keyword.operator.comparison.hymn"
        }
      }
    },
    {
      "match": "(\\w+(?:\\.\\w+)*)(?= *(?:=|\\+=|-=|/=|\\*=|\\^=|\\|=|&=|<<=|>>=))",
      "captures": {
        "1": {
          "name": "variable.other.assignment.hymn"
        }
      }
    }
  ]
}
